<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="275dp">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <!-- Transparent overlay to help discern between text and background image -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/recyclerview_image_gradient">
    </FrameLayout>

    <TextView
        android:id="@+id/item_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text="Pure Chimp Flash Sale!"/>

    <TextView
        android:id="@+id/item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginTop="65dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text="50% OFF + FREE DELIVERY (ENDS 5TH NIGHT)"/>

    <TextView
        android:id="@+id/item_em_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="14sp"
        android:textColor="@color/recyclerview_list_item_text_yellow"
        android:text="99 em"/>

    <TextView
        android:id="@+id/real_world_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:textSize="14sp"
        android:textColor="@color/recyclerview_list_item_text_yellow"
        android:text="Worth up to Â£7"/>

</FrameLayout>